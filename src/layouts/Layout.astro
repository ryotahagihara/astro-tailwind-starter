---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}
const {
  title = "astro-tailwind-starter",
  description = "Minimal Astro v5 starter kit with Tailwind CSS v4, TypeScript, Prettier, and ESLint pre-configured. Ready to deploy on Cloudflare Workers.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="prose prose-sm mx-auto max-w-4xl bg-white p-6">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
